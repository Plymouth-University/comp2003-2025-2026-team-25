<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66C4FF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/profile_button"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2798F5"
        android:text="@string/profile_title"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/qtrobot_image"
        android:layout_width="800dp"
        android:layout_height="1000dp"
        android:src="@drawable/qt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.639" />

    <ImageButton
        android:id="@+id/app_settings_icon"
        android:layout_width="220dp"
        android:layout_height="152dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/app_settings"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/upcoming_appointment_icon"
        android:layout_width="183dp"
        android:layout_height="160dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="392dp"
        android:src="@drawable/upcoming_appoint"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/app_settings_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bottom_navigation_manual"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/navigation_chat_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/qtrobot_chat"
            android:scaleType="fitCenter"
            android:padding="32dp"/>

        <ImageButton
            android:id="@+id/navigation_daily_brush"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/dailybrush"
            android:scaleType="fitCenter"
            android:padding="32dp"/>

        <ImageButton
            android:id="@+id/navigation_brush_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="32dp"
            android:scaleType="fitCenter"
            android:src="@drawable/toothbrush" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>